<%- include('../includes/header.ejs') %>
<%- include('../includes/navbar.ejs') %>

<div x-data="{show:false}">
    <div class="flex items-center justify-center mt-40">
      <button @click="show=true" class="px-4 py-2 font-semibold text-blue-100 bg-blue-600 rounded" type="button">Login
        Modal</button>
    </div>
    <div x-show="show" class="absolute inset-0 flex items-center justify-center bg-gray-700 bg-opacity-50">
  
      <div @click.away="show = false" class="flex flex-col w-full p-20 m-8 bg-white rounded-md lg:m-0 lg:w-1/4 sm:p-10">
        <div class="mb-8 text-center">
          <h1 class="my-3 text-4xl font-bold">Login</h1>
          <% if(!errorMessage) { %>
          <p class="text-sm text-coolGray-600">Login to access your account</p>
          <% } %>
          <% if(errorMessage) { %>
            <p class="font-Montserrat text-red-500"><%= errorMessage %></p>
            <% } %>
        </div>
        <form method="POST" action="/login" class="" novalidate>
          <div class="space-y-4">
            <div>
              <label for="email" class="block mb-2 text-sm">Email address</label>
              <input type="email" name="email" placeholder="email" value="<%=oldInput.email%>"
              class="w-full px-3 py-2 text-blue-800 border border-blue-300 rounded-md bg-blue-50 focus:outline-none focus:ring-1 focus:ring-blue-300
              <%= validationError.find(e => e.path === 'email') ? 'bg-red-300 border-red-600' : '' %>">
            </div>
            <div>
              <div class="flex justify-between mb-2">
                <label for="password" class="text-sm">Password</label>
              </div>
              <input type="password" name="password" placeholder="password" value="<%=oldInput.password%>"
              class="w-full px-3 py-2 text-blue-800 border border-blue-300 rounded-md bg-blue-50 focus:outline-none focus:ring-1 focus:ring-blue-300
              <%= validationError.find(e => e.path === 'password') ? 'bg-red-300 border-red-600' : '' %>">
              <a href="#" class="text-xs text-blue-600 hover:underline">Forgot password?</a>
            </div>
          </div>
          <div class="mt-6 space-y-2">
            <div class="flex gap-x-2">
              <button type="submit" class="w-full px-8 py-3 text-blue-100 bg-blue-600 rounded-md">Login</button>
              <a href="/"
                class="w-full px-8 py-3 text-center text-blue-600 border border-blue-600 rounded-md">Cancel</a>
            </div>
            <p class="px-6 text-sm text-center text-coolGray-600">Don't have an account yet?
              <a href="/signup" class="text-blue-600 hover:underline">Sign up</a>.
            </p>
          </div>
        </form>
  
      </div>
    </div>
  </div>

  <%- include('../includes/footer.ejs') %>