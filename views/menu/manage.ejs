<%- include('../includes/header.ejs') %>
<%- include('../includes/navbar.ejs') %>

<div class="mt-14 flex justify-center items-center">
    <div class="grid grid-cols-1 md:grid-cols-2 mx-auto">
        <div class="md:max-w-xl">
            <img class="rounded-full md:max-w-xl max-w-xs shadow-blue-200" src="https://img.freepik.com/free-vector/expression-face-young-woman-who-is-surprised-thinking-with-her-hand-her-chin_10045-674.jpg?w=1060&t=st=1692535724~exp=1692536324~hmac=cf778281afb54f50400a6ce08bd9e03225db1ba1145df2dad99d4fc9b721aece" alt="">
        </div>
        <div class="md:mt-24">
            <h1 class="font-Montserrat text-2xl md:text-4xl md:text-start text-center font-semibold text-blue-600">Informasi Finansial</h1>
            <div class="bg-blue-400 px-10 md:px-0 border-b-4 border-r-4 rounded-xl md:rounded-none border-blue-800 font-bold py-4 font-QuickSand text-xl">
                <form action="/manage/<%=user._id%>" method="POST" novalidate>
                    <input name="date" class="block w-full md:w-1/2 mx-auto rounded-lg bg-orange-200 text-white font-Montserrat font-bold" type="date">
                    <label class="text-white md:ml-4">Saldo Saya Sekarang</label>
                    <input name="balance" class="border-b-2 border-black block w-full md:w-5/6 ml-0 md:ml-4 rounded-lg" type="number">
                    <label class="text-white md:ml-4">Pengeluaran Saya Sekarang</label>
                    <input name="expense" class="border-b-2 border-black block w-full md:w-5/6 ml-0 md:ml-4 rounded-lg" type="number">
                    <label class="text-white md:ml-4">Hutang Saya Sekarang</label>
                    <input name="debt" class="border-b-2 border-black block w-full md:w-5/6 ml-0 md:ml-4 rounded-lg" type="number">
                    <button class="bg-blue-600 block md:ml-4 px-5 py-2 mt-4 md:mt-0 rounded-lg">Enter</button>
                </form>
            </div>
        </div>
    </div>
</div>



